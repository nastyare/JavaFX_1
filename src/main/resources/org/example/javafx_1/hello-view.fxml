<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.javafx_1.ShapeDrawerController" spacing="10">
    <Canvas fx:id="canvas" width="800" height="600" />
    <HBox spacing="10">
        <Button fx:id="circleButton" text="Draw Circle" onAction="#handleCircleButton"/>
        <Button fx:id="rectangleButton" text="Draw Rectangle" onAction="#handleRectangleButton"/>
    </HBox>
</VBox>
